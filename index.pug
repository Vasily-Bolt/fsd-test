//-Объект с массивом данных по вариациям прозрачности, цветов и размеров текста
- 
  var ColorsAndShades2 = {
    'dark-shade-total' : ['Dark Shade 100%','#1F2041'],
    'dark-shade-almost-total' : ['Dark Shade 75%','#1F2041'],
    'dark-shade-half' : ['Dark Shade 50%','#1F2041'],
    'dark-shade-quater' : ['Dark Shade 25%','#1F2041'],
    'dark-shade-light' : ['Dark Shade 5%','#1F2041'],
    'shade-purple' : ['Purple','#BC9CFF'],
    'shade-green' : ['Green','#6FCF97'],
    'body-head1' : ['H1','This one is the sub-section or widget title'],
    'body-head2' : ['H2','Next one is the item title inside widgets'],
    'body-head3' : ['H3','This is a label or CTA text'],
    'body' : ['Body','This is the body text which is used for most of the design, like paragraphs, lists, etc.']
    }

mixin colorCont(modificator, values)
  //-левый контейнер (квадрат или заголовки)
  div(class='TCAS-cont__left') 
    //-Если это показатель цвета/тени
    - if (modificator.includes('shade'))
      //-квадрат с цветом
      div(class='TCAS-cont__left__square ' + modificator)
    - else
      //-Блок с текстом H_,BODY
      div(class='TCAS-cont__left__text-block ' + modificator)= values[0]
  
  //-правый контейнер для текста
  div(class='TCAS-cont__right')= values[1]
  //-Если это показатель цвета/тени
  - if (modificator.includes('shade'))
    //-Показываем заголовок
    div(class='TCAS-cont__right__title')= values[0]
  
  //-текст (цвет или надпись текстом)
  div(class='TCAS-cont__right__text')= values[1]

<!DOCTYPE html>

html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="normalize.css")
    link(rel="stylesheet", href="style.css")
    title 123
  body
    .wrapper
      each val, key in ColorsAndShades2
        |
        |
        |
        //-контейнер с информацией по цветам/шрифтам The Colors And Sizes
        .TCAS-cont
          +colorCont(key, val)
